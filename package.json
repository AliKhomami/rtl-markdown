{
    "name": "rtl-markdown",
    "displayName": "RTL Markdown",
    "description": "Markdown right to left support",
    "version": "0.0.4",
    "publisher": "dalirnet",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Formatters",
        "Other"
    ],
    "keywords": [
        "markdown",
        "rtl",
        "persian"
    ],
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./script/extension.js",
    "contributes": {
        "configurationDefaults": {
            "[markdown]": {
                "editor.minimap.enabled": false
            }
        },
        "commands": [
            {
                "command": "rtl-markdown.install",
                "title": "Instal RTL Markdown"
            },
            {
                "command": "rtl-markdown.uninstall",
                "title": "Uninstal RTL Markdown"
            },
            {
                "command": "rtl-markdown.rtl",
                "title": "RTL Markdown",
                "icon": "$(debug-step-over)"
            },
            {
                "command": "rtl-markdown.ltr",
                "title": "LTR Markdown",
                "icon": "$(debug-step-back)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == markdown && resourceFilename =~ /^(?:.*(\\.rtl\\.md)).*$/",
                    "command": "rtl-markdown.ltr",
                    "group": "1_run"
                },
                {
                    "when": "resourceLangId == markdown && resourceFilename =~ /^(?!.*(\\.rtl\\.md)).*$/",
                    "command": "rtl-markdown.rtl",
                    "group": "1_run"
                }
            ]
        },
        "markdown.previewStyles": [
            "./style/preview.css",
            "./style/github.css"
        ],
        "markdown.previewScripts": [
            "./script/preview.js"
        ]
    },
    "scripts": {},
    "dependencies": {
        "sudo-prompt": "^9.2.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dalirnet/rtl-markdown.git"
    }
}
